{
    "tasks": [
        // Build
        {
            "label": "Build",
            "type": "shell",
            "command": "stack build",
            "problemMatcher": [
                {
                    "owner": "stack",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+):(\\d+):$",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        },
                        {
                            "regexp": "^\\s+(.*)$",
                            "message": 1
                        }
                    ]
                }
            ],
            "presentation": {
                "panel": "dedicated",
                "reveal": "always",
                "focus": true
            }
        },
        // Test
        {
            "label": "Test",
            "type": "shell",
            "command": "stack test",
            "problemMatcher": [
                {
                    "owner": "stack",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+):(\\d+):$",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        },
                        {
                            "regexp": "^\\s+(.*)$",
                            "message": 1
                        }
                    ]
                }
            ],
            "presentation": {
                "panel": "dedicated",
                "reveal": "always",
                "focus": true
            }
        },
        // Run
        {
            "label": "Run",
            "type": "shell",
            "command": "./r",
            "problemMatcher": [
                {
                    "owner": "stack",
                    "fileLocation": "absolute",
                    "pattern": [
                        {
                            "regexp": "^(.*):(\\d+):(\\d+):$",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        },
                        {
                            "regexp": "^\\s+(.*)$",
                            "message": 1
                        }
                    ]
                }
            ],
            "presentation": {
                "panel": "new",
                "reveal": "always",
                "focus": true
            }
        },
    ],
}